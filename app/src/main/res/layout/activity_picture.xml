<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/my_surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/take_photo"
        android:layout_width="@dimen/_122px_in720p"
        android:layout_height="@dimen/_122px_in720p"
        android:background="@drawable/pz_03"
        android:layout_marginBottom="@dimen/_80px_in720p"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/sure"
        android:layout_width="@dimen/_122px_in720p"
        android:layout_height="@dimen/_122px_in720p"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_120px_in720p"
        android:layout_marginBottom="@dimen/_80px_in720p"
        android:background="@drawable/pz_10"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="@dimen/_122px_in720p"
        android:layout_height="@dimen/_122px_in720p"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_120px_in720p"
        android:background="@drawable/pz_07"
        android:visibility="gone" />

</RelativeLayout>
